{
	"compilerOptions": {
		"declaration": false,
		"declarationMap": false,
		"rootDirs": [".", ".next-types"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		},
		"types": ["bun-types", "@ronin/kus"]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"**/*.(mts|ts)"
	],
	"exclude": ["node_modules"]
}
